@{
    ViewData["Title"] = "Students Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    
}

<h1>@ViewData["Title"]</h1>

<div id="pageBody" class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <em class="fa fa-gift"></em>Student List
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="studentTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_3_info"></table>
                </div>
                <div class="row col-md-offset-0">
                    <button type="button" onclick="showModalForAddStudent();" class="btn blue col-md-2">Add Student</button>
                </div>
            </div>
        </div>
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <em class="fa fa-gift"></em>Assignment List
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="assignmentTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_3_info"></table>
                </div>                
                <div class="row col-md-offset-0">
                    <button type="button" onclick="showModalForAddAssignment();" class="btn blue col-md-2">Add Assignment</button>
                </div>
            </div>
            <!-- BEGIN MODAL -->
            <div class="modal fade" id="studentModal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add Student</h4>
                        </div>
                        <div class="modal-body">
                            <form id="modalForm" autocomplete="off" class="form-horizontal" novalidate="novalidate">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Name</label>
                                        <div class="col-md-8">
                                            <div class="input-icon right">
                                                <em class="fa"></em>
                                                <input type="text" class="form-control" id="nameTxt">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">SurName</label>
                                        <div class="col-md-8">
                                            <div class="input-icon right">
                                                <em class="fa"></em>
                                                <input type="text" id="surnameTxt" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" onclick="closeStudentModal();" class="btn blue">Close</button>
                            <button type="button" onclick="saveStudentModal();" class="btn blue">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="assignmentModal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add Assignment</h4>
                        </div>
                        <div class="modal-body">
                            <form id="modalForm" autocomplete="off" class="form-horizontal" novalidate="novalidate">
                                <div class="form-body">
                                    <div class="portlet-title">
                                        <div class="caption">Select an exam from the list</div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table-responsive">
                                            <table id="examTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_3_info"></table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" onclick="closeAssignmentModal();" class="btn blue">Close</button>
                            <button type="button" onclick="saveAssignmentModal();" class="btn blue">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MODAL -->
        </div>
    </div>
</div>

@section scripts{        
    <script src="~/js/pages/studentPage.js"></script>
}